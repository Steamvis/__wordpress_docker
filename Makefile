########################################################################
######################           RUN SYSTEM        #####################
########################################################################

build:
	docker-compose build
#--no-cache

up:
	docker-compose up -d

down:
	docker-compose down


########################################################################
#######################           SERVER        ########################
########################################################################

server:
	docker-compose run --rm --no-deps server sh

########################################################################
#########################           PHP        #########################
########################################################################

php-cli:
	docker-compose run --rm --no-deps php-cli bash


################################################################
####################### LOGS/CACHE #############################
################################################################

logs-docker:
	docker-compose logs

dump-autoload:
	docker-compose run --rm --no-deps php-cli composer dump-autoload